  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"],
  "exclude": ["dist", ".next", "next.config.js", "postcss.config.js", "node_modules"]
}
